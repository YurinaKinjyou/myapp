<h2>編集する( ＾∀＾)</h2>
<%= form_tag("/post/#{@post.id}/update") do %>
    <div>
        <% @post.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
    </div>
    <textarea name="content" class="new_post_wrap"><%= @post.content %></textarea>
    <input type="submit" value="保存" class="new_post_submit">
<% end %>