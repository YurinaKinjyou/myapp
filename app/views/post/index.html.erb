
<h2>ぽちぽち投稿ー♫</h2>
<% if flash[:notice] %>
<span class="flash_update">
  <%= flash[:notice] %>
</span>
<% end %>
<div class="index_scroll">
<% @post.each do |post| %>
    <div class="post_wrap">
    <%= link_to(post.content, "post/#{post.id}") %>
    <p class="post_day"><%= post.created_at %></p>
    </div>
<% end %>
</div>